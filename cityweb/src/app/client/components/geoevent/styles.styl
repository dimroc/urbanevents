.geoevent
  text-align center
  white-space normal
  border 1px solid #ddd
  border-radius 5px
  border-top 0
  margin-bottom 20px

  span
    margin-right 20px

  img
    width 300px
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px

.hood
  display block
  background lightblue
  text-transform uppercase
  font-size 12px
  border-top-left-radius 5px
  border-top-right-radius 5px

.meta
  text-align left
  margin 20px
  h3
    margin-bottom 0
    color #777
  label
    margin: 10px 0 0 !important
  p
    font-size 12px


