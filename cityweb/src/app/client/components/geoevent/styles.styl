.geoevent
  text-align center
  white-space normal
  border 1px solid #ddd
  border-radius 5px
  border-top 0
  margin-bottom 10px

  span
    margin-right 10px

  img
    width 200px
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px

.hood
  display block
  background-color lightblue
  color black
  text-transform uppercase
  font-size 10px
  border-top-left-radius 5px
  border-top-right-radius 5px

.meta
  text-align left
  margin 10px
  h3
    margin-bottom 0
    color #777
  label
    margin: 0px 0 0 !important
  p
    margin-top: 10px
    font-size 10px


