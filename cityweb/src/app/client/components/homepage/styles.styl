.citytile
  display inline-block
  margin 0 20px

  width 300px
  height 100px

  h1
    border-right 1px solid #ccc
    border-left 1px solid #ccc
    text-align center
    vertical-align top

  &:last-child
    h1
      border-right 0

  transition font-size 1s ease-in
  font-size 20px
  a
    transition all 0.2s ease-in
    color red
    &:hover
      text-decoration none

.citytileGrid
  margin 100px 0px 20px
  white-space nowrap

.searchBar
  margin 20px
  input
    font-size 26px !important
    height 60px !important

  input[type=search]
    padding 10px 20px
