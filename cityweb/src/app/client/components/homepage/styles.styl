.example
  color mainColor
  font-size px(40)
  font-weight 500
.link
  color mainColor
  position relative
  &:before
    content ''
    position absolute
    top px(23)
    bottom px(-1)
    transition 300ms
    background-color yellow
    right px(2)
    left @right

  &:hover
    color yellow
    &:before
      left px(-2)
      right px(-2)

.p
  color mainColor

.button
  margin-top px(50)
  width px(50)
  height @width
  color #333
  font-size px(30)
  text-align center
  background-color mainColor
  display inline-block
  border-radius px(3)
